<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_profile_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_book"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Book Title"
            android:inputType="text"
            android:lines="1"
            android:maxLength="40"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_person"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Author Name"
            android:inputType="text"
            android:lines="1"
            android:maxLength="40"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/publication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_calender"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Publication"
            android:inputType="text"
            android:lines="1"
            android:maxLength="40"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_book_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/underline_reg_txt"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed" />

        <Spinner
            android:id="@+id/spinner_book_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@drawable/underline_reg_txt"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed" />

        <EditText
            android:id="@+id/edition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_edition"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Edition"
            android:inputType="text"
            android:lines="1"
            android:maxLength="40"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_description"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Description"
            android:inputType="text"
            android:lines="1"
            android:maxLength="40"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_subject"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Subject"
            android:inputType="text"
            android:lines="1"
            android:maxLength="30"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/marked_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_marked_price"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Marked Price (Rs)"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="9"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/selling_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_selling_price"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Selling Price (Rs)"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="9"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/rent_per_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_pay"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Rent per day (Rs)"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="9"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/available_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:drawableLeft="@drawable/icon_days"
            android:drawablePadding="9dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Available for days"
            android:inputType="number"
            android:lines="1"
            android:maxLength="2"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/underline_reg_txt"
            android:checkedButton="@id/radio_rent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/radio_rent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="Rent"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio_sell"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="Sell"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RadioGroup>

        <CheckBox
            android:id="@+id/checkbox_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="27dp"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp"
            android:text="Make post visible to all."
            android:textColor="@android:color/white"
            android:textColorHint="@color/textHintColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/grad_button_box"
            android:text="Post"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

</ScrollView>
